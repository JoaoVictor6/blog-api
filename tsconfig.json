{
  "compilerOptions": {
    "target": "es2020",                                
    "module": "commonjs",                          
    "outDir": "./dist",                              
    "rootDir": ".",                             
    "removeComments": true,                      
    "strict": false,                                 
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],  
    "esModuleInterop": true,                        
    "resolveJsonModule": true,
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}